---
pagination:
  data: permitsEn
  size: 1
  alias: permit
permalink: "en/permesso-{{ permit.slug }}.html"
layout: layouts/base.liquid
title: "Permit for {{ permit.tipo }}"
lang: en
description: "Residence permit for {{ permit.tipo }} - information, requirements, documents and procedures"
eleventyExcludeFromCollections: true
---

  <!-- BREADCRUMB -->
  <div class="breadcrumb-bar">
    <div class="container">
      <div class="breadcrumb-content">
        <div class="breadcrumb-nav">
          <a href="/en/index.html">Home</a> â†’
          <a href="/en/database.html">Database</a> â†’
          <span>Permit for {{ permit.tipo }}</span>
        </div>
      </div>
    </div>
  </div>

  <!-- PAGE HEADER -->
  <section class="section bg-off-white">
    <div class="container">
      <div class="page-header text-center">
        <span class="page-icon" style="font-size: 4rem;">{{ permit.emoji }}</span>
        <h1 class="page-title">Permit for {{ permit.tipo }}</h1>
      </div>
    </div>
  </section>

{% if permit.isPlaceholder == true %}
  <!-- PLACEHOLDER PAGE -->
  <section class="section">
    <div class="container" style="max-width: 900px;">
      <div class="card text-center" style="padding: 3rem;">
        <span style="font-size: 4rem;">{{ permit.emoji }}</span>
        <h2 style="margin: 1rem 0;">Content coming soon</h2>
        <p style="color: var(--gray-medium); max-width: 500px; margin: 0 auto 1.5rem;">
          We are still working on completing the information
          about this residence permit.
        </p>
        <a href="https://form.typeform.com/to/USx16QN3"
           class="btn btn-primary"
           target="_blank"
           rel="noopener noreferrer">
          Help out
        </a>
      </div>
    </div>
  </section>

{% else %}
  <!-- STANDARD PERMIT PAGE -->
  <!-- DOCUMENT CTA -->
  <section class="section" style="padding: 1.5rem 0;">
    <div class="container" style="max-width: 900px;">
      <div style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center;">
        <a href="/en/documenti-{{ permit.slug }}-primo.html" class="btn btn-primary">
          Documents for first issue
        </a>
        <a href="/en/documenti-{{ permit.slug }}-rinnovo.html" class="btn btn-rinnovo">
          Documents for renewal
        </a>
      </div>
    </div>
  </section>

  <!-- CONTENT -->
  <section class="section">
    <div class="container" style="max-width: 900px;">
      {% for section in permit.sections %}
      <!-- Section {{ forloop.index }}: {{ section.question }} -->
      <div class="card" style="margin-bottom: 2rem; border-left: 4px solid {{ forloop.index0 | getSectionBorderColor: section.question }};">
        <h2>{{ section.question }}</h2>
        {{ section.content }}
      </div>
      {% endfor %}

      <!-- CTA -->
      <div class="alert alert-info">
        <span class="alert-icon">â“</span>
        <div>
          Do you have more questions about the permit for {{ permit.tipo }}?
          <button onclick="openContactModal()" class="btn btn-primary btn-sm" style="margin-left: 0; margin-top: 0.5rem;">
            Contact us
          </button>
        </div>
      </div>

    </div>
  </section>

{% endif %}

  <!-- RELATED -->
