permalink: sitemap-en.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <!-- EN Homepage -->
  <url>
    <loc>{{ site.url }}/en/</loc>
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en/"/>
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr/"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/"/>
  </url>
  <!-- EN Static pages -->
  {%- assign enStaticPages = "database,documenti-questura,chi-siamo,dizionario,protezione-internazionale,ricongiungimento-familiare,decreto-flussi,kit-postale,il-progetto,privacy-policy,aiuto-legale,carta-soggiorno-familiare-italiano-dinamico,carta-soggiorno-familiare-ue" | split: "," %}
  {%- for slug in enStaticPages %}
  <url>
    <loc>{{ site.url }}/en/{{ slug }}.html</loc>
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/{{ slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en/{{ slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr/{{ slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/{{ slug }}.html"/>
  </url>
  {%- endfor %}
  <!-- EN Permit pages -->
  {%- for permit in permitsEn %}
  <url>
    <loc>{{ site.url }}/en/permesso-{{ permit.slug }}.html</loc>
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/permesso-{{ permit.slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en/permesso-{{ permit.slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr/permesso-{{ permit.slug }}.html"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/permesso-{{ permit.slug }}.html"/>
  </url>
  {%- endfor %}
  <!-- EN Document pages (primo rilascio) -->
  {%- for doc in documentsEn.primo %}
  <url>
    <loc>{{ site.url }}/en/documenti-{{ doc.slug }}-primo.html</loc>
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/documenti-{{ doc.slug }}-primo.html"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en/documenti-{{ doc.slug }}-primo.html"/>
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr/documenti-{{ doc.slug }}-primo.html"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/documenti-{{ doc.slug }}-primo.html"/>
  </url>
  {%- endfor %}
  <!-- EN Document pages (rinnovo) -->
  {%- for doc in documentsEn.rinnovo %}
  <url>
    <loc>{{ site.url }}/en/documenti-{{ doc.slug }}-rinnovo.html</loc>
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/documenti-{{ doc.slug }}-rinnovo.html"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en/documenti-{{ doc.slug }}-rinnovo.html"/>
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr/documenti-{{ doc.slug }}-rinnovo.html"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}/documenti-{{ doc.slug }}-rinnovo.html"/>
  </url>
  {%- endfor %}
</urlset>
