  </section>

  <!-- DOCUMENT CHECKLIST -->
  <section class="section">
    <div class="container" style="max-width: 700px;">
      <div class="card">
        <h2>üìã Documents requis</h2>
        <p class="checklist-intro">Cochez les documents que vous avez d√©j√† pr√©par√©s. Votre progr√®s est sauvegard√© automatiquement.</p>

        <div class="doc-checklist" data-permit="{{ doc.slug }}-primo-fr">
          {%- for docItem in doc.documents -%}
            {%- assign normalizedDoc = docItem | normalizeDocumentName -%}
            {%- assign docClass = normalizedDoc | getDocumentClass -%}
            {%- assign docLabel = normalizedDoc | escapeHtml -%}
            {%- assign disputed = normalizedDoc | isDisputed -%}
