  {%- else -%}
    {%- assign calloutClass = 'callout-questura' -%}
    {%- assign calloutIcon = 'üèõÔ∏è' -%}
    {%- assign calloutText = 'Apporter les documents √† la Questura (le kit postal n\'est pas utilisable)' -%}
  {%- endif -%}
